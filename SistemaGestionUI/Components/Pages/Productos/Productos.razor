@page "/Productos"
@inject ProductosService Service
<h3>Productos</h3>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class=col-6>
                    <a href="/productos/new">
                        <button class="btn btn-success">
                            Nuevo Producto
                        </button>
                    </a>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Costo</th>
                    <th>PrecioVenta</th>
                    <th>Stock</th>
                    <th>IdUsuario</th>
                    <th>Accion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Producto producto in productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Costo</td>
                        <td>@producto.PrecioVenta</td>
                        <td>@producto.Stock</td>
                        <td>@producto.Usuario.Nombre @producto.Usuario.Apellido</td>
                        <td>
                            <button @onclick="@(() => EliminarProducto(producto.Id))" class="btn btn-danger">
                                Eliminar
                            </button>
                            <a href="/productos/@producto.Id/Editar">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@code {
    private List<Producto> productos = new List<Producto>();

    private string filtro = string.Empty;

    protected override async Task OnInitializedAsync()
    {

        productos = await Service.GetProducts();
    }

    public async Task EliminarProducto(int id)
    {
        await Service.DeleteProducto(id);
        productos = await Service.GetProducts();
    }

}